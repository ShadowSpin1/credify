<div class="container py-4">
  <h1>Here is <%= @credit_card.user.email %>'s card</h1>
  <h3>Here are the card details:</h3>
  <p><strong>Cardholder name: </strong><%= @credit_card.cardholder %></p>
  <p><strong>Card Type: </strong><%= @credit_card.card_type %></p>
  <p><strong>Card Issuer: </strong><%= @credit_card.card_issuer %></p>
  <p><strong>Credit Limit: </strong><%= @credit_card.credit_limit %></p>
  <p><strong>Price Per Day: </strong><%= @credit_card.price_per_day %></p>
  <% if @credit_card.user_id == current_user.id %>
    <%= link_to "Remove your card", credit_card_path(@credit_card), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Book this card", new_credit_card_reservation_path(@credit_card), class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Back", credit_cards_path, class: "btn btn-primary" %>
</div>
<hr>
<div class="container py-4">
  <h3>Already booked dates for this card: </h3>
  <% @reservations.each do |reservation| %>
    <br>
    <div class="list-group">
      <span class="list-group-item"> <strong>From: </strong> <%= reservation.start_date %></span>
      <span class="list-group-item"><strong>Until: </strong><%= reservation.end_date %></span>
    </div>
    <br>
    <% end %>
</div>
